.col-md-20.col-sm-24.col-lg-16.col-centered
  = render 'flash'

  %legend Repo Show

  = link_to @repo.external_url, @repo.external_url

  %table.table.table-striped.table-hover
    %tr
      %th #
      %th Branch
      %th SHA
      %th Created
      %th

    - @repo.builds.reverse.each do |build|
      %tr
        %td= build.id
        %td= build.branch
        %td= build.short_sha
        %td= build.created_at
        - if build.success?
          %td.text-success= fa_icon "check"
        - else
          %td.text-danger= fa_icon "times"

