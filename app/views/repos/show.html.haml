.col-md-20.col-sm-24.col-lg-16.col-centered
  = render 'flash'

  %legend Repo Show

  = link_to @repo.external_url, @repo.external_url

  %table.table.table-striped.table-hover.no-highlights
    %tr
      %th #
      %th Branch
      %th SHA
      %th Created
      %th

    - @repo.builds.reverse.each do |build|
      - path = builds_repos_path(service: @repo.service, organization: @repo.organization, name: @repo.name, id: build.id)
      %tr
        %td= link_to build.id, path
        %td= link_to build.branch, path
        %td= link_to build.short_sha, path
        %td= link_to build.created_at, path
        - if build.success?
          %td.text-success= link_to fa_icon("check"), path
        - else
          %td.text-danger= link_to fa_icon("times"), path
